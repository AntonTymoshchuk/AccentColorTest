<Window x:Class="AccentColorTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccentColorTest"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" Height="200"
        WindowStartupLocation="Manual" Top="200" Left="0"
        WindowStyle="None" Topmost="True"
        Background="White"
        Deactivated="Window_Deactivated">
    <WindowChrome.WindowChrome>
        <WindowChrome x:Name="windowChrome" ResizeBorderThickness="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <TextBlock x:Name="transparentAccentColorTextBlock"/>
    </Grid>
</Window>
